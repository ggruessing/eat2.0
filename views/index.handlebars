<div class="jumbotron">
<h1>Burgahs</h1>
</div>

<div class="row">

<div class="col-md-6">

<h2>ALL THE BURGERS</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit" class="btn btn-default">EAAAAAT</button>
        </form>

        {{> burgers/delete-burgers}}
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-md-6">

<h2>Eaten :(</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit" class="btn btn-default">Regurgitate?</button>
        </form>

        {{> burgers/delete-burgers}}
      </li>
    {{/if}}
  {{/each}}
</ul>

</div>
</div>

<div class="row">
<div class="col-md-4">
</div>
<div class="col-md-4">
<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Name the Burger:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit" class="btn btn-default">Add Burger</button>
</form>
</div>
<div class="col-md-4">
</div.
</div>
